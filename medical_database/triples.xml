<!-- Pergunta 1 : Quais documentos falam sobre o tratamento para gestantes que possuem anemia? -->
:arq1   rdf:type      fabio:Item ;
        fabio:hasURL  <file:///dir1/arq1.pdf> .

:doc1   rdf:type            fabio:Work ;
        fabio:hasPortrayal  :arq1 ;
        po:contains         :body-matter .

:body-matter  rdf:type  doco:BodyMatter ;
        po:contains  :sectionRiskFactorsForAnemia .

:sectionRiskFactorsForAnemia
        rdf:type             doco:Section ;
        po:contains          :paragraph_1 ;
        po:containsAsHeader  "These factors can increase risk of anemia" .

:paragraph_1  rdf:type  doco:Paragraph ;
        po:contains  :triple_1 , :triple_2 .

:triple_1  rdf:type    rdf:Statement ;
        rdf:object     :Pregnancy ;
        rdf:predicate  :risk_factor_for ;
        rdf:subject    dbr:Anemia .

:triple_2  rdf:type    rdf:Statement ;
        rdf:object     dbr:Multivitamin ;
        rdf:predicate  :treatment ;
        rdf:subject    :Pregnancy .


